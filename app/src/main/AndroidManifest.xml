<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="lcukerd.com.instaswipe">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/instaicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/instaicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="lcukerd.com.instaswipe.Home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="lcukerd.com.instaswipe.SwipePic"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme"/>
        <activity android:name="lcukerd.com.instaswipe.ProfileActivity"/>
        <activity android:name="lcukerd.com.instaswipe.SearchActivity"/>
    </application>

</manifest>